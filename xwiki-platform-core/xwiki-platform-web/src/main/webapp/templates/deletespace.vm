#end
#xwikimessagebox($msg.get('core.delete') $confirmationMessage $doc.getURL('deletespace', "confirm=1$!{redirectparam}&amp;form_token=$!{services.csrf.getToken()}") $doc.getURL('view') $msg.get('yes') $msg.get('no'))
